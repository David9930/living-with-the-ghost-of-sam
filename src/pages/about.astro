    </main>
</Layout>

<script>
    // Add Font Awesome for icons
    const link = document.createElement('link');
    link.rel = 'stylesheet';
    link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css';
    document.head.appendChild(link);
    
    // Add AOS (Animate on Scroll) library
    const aosCSS = document.createElement('link');
    aosCSS.rel = 'stylesheet';
    aosCSS.href = 'https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css';
    document.head.appendChild(aosCSS);
    
    const aosScript = document.createElement('script');
    aosScript.src = 'https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js';
    document.body.appendChild(aosScript);
    
    aosScript.onload = function() {
        AOS.init({
            duration: 1000,
            once: true
        });
    };
    
    // Improved clipboard functionality with fallback methods
    document.addEventListener('DOMContentLoaded', function() {
        const copyBtn = document.getElementById('copy-email-btn');
        const message = document.getElementById('email-copied-message');
        const emailText = 'derekdevon17@gmail.com';
        
        if (copyBtn) {
            copyBtn.addEventListener('click', function() {
                // Method 1: Modern Clipboard API with fallbacks
                if (navigator.clipboard && window.isSecureContext) {
                    // Secure context with Clipboard API available
                    navigator.clipboard.writeText(emailText)
                        .then(() => {
                            showSuccess();
                        })
                        .catch(err => {
                            console.error('Could not copy text: ', err);
                            fallbackCopyMethod();
                        });
                } else {
                    // Fallback for older browsers or non-secure contexts
                    fallbackCopyMethod();
                }
            });
        }
        
        // Fallback copy method using text area
        function fallbackCopyMethod() {
            try {
                // Create a temporary textarea element
                const textArea = document.createElement("textarea");
                textArea.value = emailText;
                
                // Make the textarea out of viewport
                textArea.style.position = "fixed";
                textArea.style.left = "-999999px";
                textArea.style.top = "-999999px";
                document.body.appendChild(textArea);
                
                // Focus and select the text
                textArea.focus();
                textArea.select();
                
                // Execute the copy command
                const successful = document.execCommand('copy');
                
                // Clean up
                document.body.removeChild(textArea);
                
                if (successful) {
                    showSuccess();
                } else {
                    showManualCopyPrompt();
                }
            } catch (err) {
                console.error('Fallback copy method failed: ', err);
                showManualCopyPrompt();
            }
        }
        
        // Show success message
        function showSuccess() {
            message.textContent = "Email copied to clipboard!";
            message.style.display = 'block';
            message.style.color = '#4CAF50';
            
            setTimeout(() => {
                message.style.display = 'none';
            }, 3000);
        }
        
        // Show manual copy prompt if all else fails
        function showManualCopyPrompt() {
            message.innerHTML = "Copy this email: <strong>" + emailText + "</strong>";
            message.style.display = 'block';
            message.style.color = '#FFA500';
        }
    });
    

// Simple form handling for newsletter with EmailJS tracking integration
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('newsletter-form');
    const message = document.querySelector('.form-message');
    
    if (form) {
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            const emailInput = form.querySelector('input[type="email"]');
            const email = emailInput.value;
            
            // Skip if tracking is disabled (admin mode)
            if (localStorage.getItem('trackingDisabled') === 'true') {
                console.log("Newsletter subscription tracking skipped (admin mode)");
                // Still show success message
                message.textContent = "Thanks for subscribing! We'll be in touch.";
                message.style.color = "#4CAF50";
                form.reset();
                
                // Clear the message after a few seconds
                setTimeout(() => {
                    message.textContent = "";
                }, 5000);
                return;
            }
            
            // Get session data if available
            let sessionId = 'Unknown';
            try {
                const sessionData = JSON.parse(sessionStorage.getItem('sessionTracking') || '{}');
                sessionId = sessionData.sessionId || 'Unknown';
            } catch (error) {
                console.error("Error getting session data:", error);
            }
            
            // Send tracking event for the newsletter subscription
            sendTrackingEvent('Newsletter Subscription', {
                sessionId: sessionId,
                email: email,
                page: window.location.pathname,
                time: new Date().toISOString()
            });
            
            // Show success message
            message.textContent = "Thanks for subscribing! We'll be in touch.";
            message.style.color = "#4CAF50";
            form.reset();
            
            // Clear the message after a few seconds
            setTimeout(() => {
                message.textContent = "";
            }, 5000);
        });
    }
});
</script>

