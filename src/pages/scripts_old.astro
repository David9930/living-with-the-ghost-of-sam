---
import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
const episodes = [
    {
        number: 1,
        title: "Leap of Faith",
        filename: "Living_with_the_Ghost_of_Sam_Ep1.pdf",
        available: true
    },
    {
        number: 2,
        title: "Night Moves",
        filename: "Living_with_the_Ghost_of_Sam_Ep2.pdf",
        available: false
    },
    {
        number: 3,
        title: "Two out of Three Ain't Bad",
        filename: "Living_with_the_Ghost_of_Sam_Ep3.pdf",
        available: false
    },
    {
        number: 4,
        title: "Last Laugh",
        filename: "Living_with_the_Ghost_of_Sam_Ep4.pdf",
        available: false
    },
    {
        number: 5,
        title: "Digital Inheritance",
        filename: "Living_with_the_Ghost_of_Sam_Ep5.pdf",
        available: false
    },
    {
        number: 6,
        title: "Missing",
        filename: "Living_with_the_Ghost_of_Sam_Ep6.pdf",
        available: true
    },
    {
        number: 7,
        title: "Episode 7",
        filename: "Living_with_the_Ghost_of_Sam_Ep7.pdf",
        available: false
    },
    {
        number: 8,
        title: "Episode 8",
        filename: "Living_with_the_Ghost_of_Sam_Ep8.pdf",
        available: false
    },
    {
        number: 9,
        title: "Episode 9",
        filename: "Living_with_the_Ghost_of_Sam_Ep9.pdf",
        available: false
    },
    {
        number: 10,
        title: "Episode 10",
        filename: "Living_with_the_Ghost_of_Sam_Ep10.pdf",
        available: false
    }
];
---

<Layout title="TV Scripts">
    <main>
        <h1>TV Show Scripts</h1>
        <div class="scripts-grid">
            {episodes.map((episode) => (
                <div class="script-card">
                    <div class="episode-info">
                        <h3>Episode {episode.number}</h3>
                        <p class="episode-title">"{episode.title}"</p>
                    </div>
                    <div class="button-container">
                        {episode.available ? (
                            <>
                                <a 
                                    href={`/living-with-the-ghost-of-sam/scripts/${episode.filename}`}
                                    class="btn download-btn"
                                    download={episode.filename}
                                    type="application/pdf"
                                > 
                                    Download
                                </a>
                                <a 
                                    href={`/living-with-the-ghost-of-sam/scripts/${episode.filename}`}
                                    class="btn view-btn"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    View PDF
                                </a>
                            </>
                        ) : (
                            <>
                                <button class="btn btn-disabled" disabled>
                                    Download
                                </button>
                                <button class="btn btn-disabled" disabled>
                                    View PDF
                                </button>
                            </>
                        )}
                    </div>
                </div>
            ))}
        </div>
    </main>
</Layout>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital@0;1&display=swap');

    main {
        margin: auto;
        padding: 2rem;
        max-width: 1400px;
        color: white;
    }
    h1 {
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 2rem;
    }
    h3 {
        margin: 0;
        padding-bottom: 0.5rem;
        text-align: center;
        font-size: 1.5rem;
    }
    .episode-info {
        text-align: center;
        margin-bottom: 1rem;
    }
    .episode-title {
        font-family: 'Playfair Display', serif;
        font-style: italic;
        font-size: 1.25rem;
        margin: 0;
        color: #FFD700;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }
    .scripts-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        padding: 1rem;
    }
    .script-card {
        background: rgba(255, 255, 255, 0.1);
        padding: 1.5rem;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        min-height: 150px;
    }
    .button-container {
        display: flex;
        gap: 1rem;
        justify-content: center;
        width: 100%;
    }
    .btn {
        display: inline-block;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        text-decoration: none;
        border: none;
        cursor: pointer;
        font-size: 1rem;
        transition: background 0.2s;
    }
    .download-btn {
        background: #4CAF50;
    }
    .download-btn:hover {
        background: #45a049;
    }
    .view-btn {
        background: #2196F3;
    }
    .view-btn:hover {
        background: #1976D2;
    }
    .btn-disabled {
        background: #cccccc;
        color: #666666;
        cursor: not-allowed;
    }
</style>
